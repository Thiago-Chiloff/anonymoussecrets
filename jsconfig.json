{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@pages/*": ["src/pages/*"]
    },
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "main.jsx"],
  "exclude": ["node_modules", "dist"]
}